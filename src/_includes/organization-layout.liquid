---
layout: base-layout.liquid
---
<div class="bg-gradient-to-r from-yellow-400 to-yellow-300 dark:from-gray-800 dark:to-gray-700 p-6 mt-4 border border-gray-300 dark:border-gray-500 shadow">
  <h1 class="text-xl text-center mb-2 font-medium">{{ title }} // <a href="{{ url }}" class="hover:text-gray-400 underline">{{ url | stripHttp }}</a></h1>
  <div class="text-lg flex justify-center">
  {{ content }}
  </div>
</div>
<div class="grid md:grid-cols-2 grid-cols-1 justify-items-center mt-4 gap-4">
  {% for post in collections.allMedia %}
  {% if post.data.organization == title %}
  <div class="transition duration-100 bg-white dark:bg-gray-800 dark:border-gray-700 rounded shadow border text-center w-full hover:bg-yellow-100 dark:hover:bg-gray-700 transform md:hover:-translate-y-1 focus:bg-yellow-100 dark:focus:bg-gray-800">
    <a class="w-full h-full p-6" href="{{ post.url | url }}">
    <h2 class="text-xl font=bold mb-4 mt-0 p-2">
      {{ post.data.title }}
    </h2>
    <h3 class="text-l">
      {{ page.date | readableDate }} <b>Â·</b> {{ post.data.tags[0] }}
    </h3>
    </a>
  </div>
  {% endif %}
{% endfor %}
</div>
